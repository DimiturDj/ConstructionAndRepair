@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero bg-primary text-white py-5">
    <div class="container text-center">
        <h1 class="display-4 fw-bold text-white">Repair & Construction Services</h1>
        <p class="lead text-light mb-4">
            Book trusted professionals for any construction, renovation or repair job.
        </p>
        <a asp-controller="JobOffers" asp-action="Index" class="btn btn-light btn-lg px-5 py-3 mt-3">
            Browse Services
        </a>
    </div>
</section>

<!-- Services Section -->
<section class="services py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-primary">Our Services</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-primary">
                    <div class="card-body">
                        <img src="https://cdn-icons-png.flaticon.com/512/2933/2933811.png" width="60" />
                        <h5 class="mt-3 text-primary">House Work</h5>
                        <p>Our expert builders are ready to fix your leaks, roofs, and more!</p>
                        <a href="/JobOffers/Index" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-primary">
                    <div class="card-body">
                        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828817.png" width="60" />
                        <h5 class="mt-3 text-primary">Electrical Services</h5>
                        <p>Skilled electricians to handle installations, repairs, and electrical issues.</p>
                        <a href="/JobOffers/Index" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow-lg border-primary">
                    <div class="card-body">
                        <img src="https://cdn-icons-png.flaticon.com/512/1828/1828884.png" width="60" />
                        <h5 class="mt-3 text-primary">Construction</h5>
                        <p>Our team is ready to tackle your construction projects from start to finish.</p>
                        <a href="/JobOffers/Index" class="btn btn-primary">Learn More</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="why-choose-us py-5 bg-light">
    <div class="container text-center">
        <h2 class="mb-4 text-primary">Why Choose Us?</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <h5 class="text-dark">Verified Professionals</h5>
                <p class="text-muted">All of our workers are carefully vetted and verified by previous customers.</p>
            </div>
            <div class="col-md-4 mb-4">
                <h5 class="text-dark">Quick Booking</h5>
                <p class="text-muted">Book your services in just a few clicks. Simple and fast!</p>
            </div>
            <div class="col-md-4 mb-4">
                <h5 class="text-dark">Top Rated</h5>
                <p class="text-muted">Read honest reviews before choosing a professional to ensure the best experience.</p>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials bg-white py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-primary">What Our Customers Say</h2>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">"The plumber was quick and efficient. Fixed my pipe issue in no time!"</p>
                        <h5 class="card-title text-primary">Mark Williams</h5>
                        <p class="card-subtitle text-muted">Customer</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">"Great service! The electrician arrived on time and solved my problem." </p>
                        <h5 class="card-title text-primary">Sara Miller</h5>
                        <p class="card-subtitle text-muted">Customer</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <p class="card-text">"Excellent quality work on my home renovation. Highly recommended!"</p>
                        <h5 class="card-title text-primary">John Doe</h5>
                        <p class="card-subtitle text-muted">Customer</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action Section -->
<section class="cta bg-primary text-white py-5">
    <div class="container text-center">
        <h2 class="mb-4 text-white">Ready to start your project?</h2>
        <p class="mb-4 text-white">Create an account and book your first service in seconds!</p>
        <a href="/Account/Register" class="btn btn-light btn-lg">Get Started</a>
    </div>
</section>

