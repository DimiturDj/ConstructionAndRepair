<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RepairAndConstruction</title>

    <!-- Favicon -->
    <link rel="icon" type="image/png" href="~/images/logoforsite.jpg" />

    <!-- Styles -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RepairAndConstruction.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">

    <!-- Header -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center gap-2 me-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logoforsite.jpg" alt="Logo" width="40" height="40" class="rounded" />
                    <span class="fw-bold text-primary">RepairAndConstruction</span>
                </a>

                <!-- Toggle for Mobile View -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navigation Links -->
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="JobOffers" asp-action="Index">Job Offers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Workers" asp-action="Index">Workers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Customers" asp-action="Index">Customers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Bookings" asp-action="Index">Bookings</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Reviews" asp-action="Index">Reviews</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>

                    <!-- Dynamic Login/Register or Logout -->
                    <ul class="navbar-nav ms-auto">
                        @if (Context.Session.GetString("Username") != null)
                        {
                            <li class="nav-item">
                                <span class="nav-link text-success fw-semibold">Hello, @Context.Session.GetString("Username")</span>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Log out</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Log in</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content -->
    <div class="container mt-4 flex-grow-1">

        <!-- Role-based Panel -->
        @{
            var userRole = Context.Session.GetString("Role") ?? "Guest";
        }

        @if (userRole == "Admin")
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Admin Panel</h3>
                </div>
                <div class="panel-body">
                    <p>Welcome, Admin! Manage users, view reports, and more.</p>
                    <a href="/Admin/ManageUsers" class="btn btn-primary">Manage Users</a>
                    <a href="/Admin/Reports" class="btn btn-secondary">View Reports</a>
                </div>
            </div>
        }
        else if (userRole == "Worker")
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Worker Panel</h3>
                </div>
                <div class="panel-body">
                    <p>Welcome, Worker! View your job offers and check bookings.</p>
                    <a href="/Workers/ViewJobs" class="btn btn-primary">View Jobs</a>
                    <a href="/Workers/Bookings" class="btn btn-secondary">My Bookings</a>
                </div>
            </div>
        }
        else if (userRole == "Customer")
        {
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3>Customer Panel</h3>
                </div>
                <div class="panel-body">
                    <p>Welcome, Customer! Browse job offers, book services, and leave reviews.</p>
                    <a href="/JobOffers/Index" class="btn btn-primary">Browse Job Offers</a>
                    <a href="/Bookings/View" class="btn btn-secondary">My Bookings</a>
                    <a href="/Reviews/Write" class="btn btn-success">Write a Review</a>
                </div>
            </div>
        }
        else
        {
            <p>Please log in to access your panel.</p>
        }

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white py-4 mt-5">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center text-center text-md-start">
            <div>
                <h5 class="fw-bold text-primary">RepairAndConstruction</h5>
                <p class="mb-1">Your trusted platform for repair & construction services.</p>
                <p class="mb-0 small">&copy; 2025 RepairAndConstruction. All rights reserved.</p>
            </div>

            <div class="mt-3 mt-md-0">
                <h6 class="fw-semibold">Quick Links</h6>
                <ul class="list-unstyled">
                    <li><a asp-controller="Home" asp-action="Index" class="text-white">Home</a></li>
                    <li><a asp-controller="JobOffers" asp-action="Index" class="text-white">Job Offers</a></li>
                    <li><a asp-controller="Workers" asp-action="Index" class="text-white">Workers</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy" class="text-white">Privacy Policy</a></li>
                </ul>
            </div>

            <div class="mt-3 mt-md-0">
                <h6 class="fw-semibold">Contact</h6>
                <p class="mb-1">📍 Sofia, Bulgaria</p>
                <p class="mb-1">📞 +359 879 371 047</p>
                <p class="mb-0">📧 info@repairservices.bg</p>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
