@model RepairAndConstruction.Models.JobOffer

@{
    ViewData["Title"] = "Job Offer Details";
    var userRole = Context.Session.GetString("Role") ?? "Guest";
}

<h1>Job Offer Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Worker</dt>
        <dd class="col-sm-10">@Model.Worker?.FullName</dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
    @if (userRole != "Customer")
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    }
</div>
