@model RepairAndConstruction.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
    var username = Context.Session.GetString("Username");
}

<h1>Create Booking</h1>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <!-- Покажи клиента (readonly) -->
    <div class="form-group mb-3">
        <label>Customer</label>
       <input class="form-control" value="@username" readonly />

    </div>

    <!-- Job Offer -->
    <div class="form-group mb-3">
        <label asp-for="JobOfferId" class="form-label">Job Offer</label>
        <select asp-for="JobOfferId" class="form-control" asp-items="(IEnumerable<SelectListItem>)ViewBag.JobOfferId">
            <option value="">-- Select Job Offer --</option>
        </select>
        <span asp-validation-for="JobOfferId" class="text-danger"></span>
    </div>

    <!-- Booking Date -->
    <div class="form-group mb-3">
        <label asp-for="BookingDate" class="form-label">Booking Date</label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <!-- Скрито поле за статус -->
    <input type="hidden" asp-for="Status" value="Pending" />

    <button type="submit" class="btn btn-primary">Book Now</button>
    <a asp-controller="JobOffers" asp-action="Index" class="btn btn-secondary">Back to Offers</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}