@model RepairAndConstruction.Models.JobOffer

@{
    ViewData["Title"] = "Job Offer Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h2 class="mb-0 text-center">📄 Job Offer Details</h2>
        </div>
        <div class="card-body">
            <dl class="row fs-5">
                <dt class="col-sm-3 fw-semibold">🔹 Title</dt>
                <dd class="col-sm-9">@Model.Title</dd>

                <dt class="col-sm-3 fw-semibold">📝 Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3 fw-semibold">💰 Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3 fw-semibold">👷 Worker</dt>
                <dd class="col-sm-9">@Model.Worker?.FullName</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary">← Back to List</a>
            @if (Context.Session.GetString("Role") == "Admin")
            {
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning me-2">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">🗑 Delete</a>
                </div>
            }
        </div>
    </div>
</div>
