@model RepairAndConstruction.Models.Review

@{
    ViewData["Title"] = "Delete Review";
}

<h1>Delete Review</h1>

<h3>Are you sure you want to delete this review?</h3>

<div>
    <h4>Review</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Reviewer Name</dt>
        <dd class="col-sm-9">@Model.ReviewerName</dd>

        <dt class="col-sm-3">Worker</dt>
        <dd class="col-sm-9">@Model.Worker?.FullName</dd>

        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">@Model.Rating</dd>

        <dt class="col-sm-3">Comment</dt>
        <dd class="col-sm-9">@Model.Comment</dd>
    </dl>

    <form asp-action="DeleteConfirmed">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
