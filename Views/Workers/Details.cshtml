@model RepairAndConstruction.Models.Worker

@{
    ViewData["Title"] = "Worker Details";
    var role = Context.Session.GetString("Role") ?? "Guest";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-dark text-white text-center rounded-top-4">
            <h2 class="mb-0">👷 Worker Details</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center">@Model.FullName</h4>
            <hr />
            <dl class="row fs-5">
                <dt class="col-sm-3 fw-semibold">🛠 Profession</dt>
                <dd class="col-sm-9">@Model.Profession</dd>

                <dt class="col-sm-3 fw-semibold">📍 Location</dt>
                <dd class="col-sm-9">@Model.Location</dd>

                <dt class="col-sm-3 fw-semibold">⭐ Rating</dt>
                <dd class="col-sm-9">@Model.Rating</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            @if (role == "Admin")
            {
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning me-2">✏️ Edit</a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">🗑 Delete</a>
                </div>
            }
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">← Back</a>
        </div>
    </div>
</div>
