@{
    ViewData["Title"] = "Home";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h1 class="display-4 fw-bold text-primary">Repair & Construction Services</h1>
            <p class="lead text-muted mb-4">
                Book trusted professionals for any construction, renovation or repair job.
            </p>
            <a asp-controller="JobOffers" asp-action="Index" class="btn btn-primary btn-lg px-5 py-3">
                Browse Services
            </a>
        </div>
    </div>

    <div class="row mt-5 text-center">
        <div class="col-md-4">
            <img src="https://cdn-icons-png.flaticon.com/512/2933/2933811.png" width="60" />
            <h5 class="mt-3">Verified Workers</h5>
            <p class="text-muted">All professionals are reviewed and vetted by clients.</p>
        </div>
        <div class="col-md-4">
            <img src="https://cdn-icons-png.flaticon.com/512/1828/1828817.png" width="60" />
            <h5 class="mt-3">Easy Booking</h5>
            <p class="text-muted">Book at your preferred time with just a few clicks.</p>
        </div>
        <div class="col-md-4">
            <img src="https://cdn-icons-png.flaticon.com/512/1828/1828884.png" width="60" />
            <h5 class="mt-3">Top Rated</h5>
            <p class="text-muted">See honest reviews and choose the best worker for the job.</p>
        </div>
    </div>

    <div class="mt-5 p-5 bg-light rounded shadow text-center">
        <h2 class="fw-bold">Ready to start your project?</h2>
        <p class="lead text-muted">Create an account and book your first service today!</p>
        <a asp-controller="Customers" asp-action="Create" class="btn btn-outline-primary btn-lg mt-3">Get Started</a>
    </div>
</div>
