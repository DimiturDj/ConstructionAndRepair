@model RepairAndConstruction.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h2 class="mb-0">📅 Booking Details</h2>
        </div>
        <div class="card-body">
            <h4 class="text-center">Booking Information</h4>
            <hr />
            <dl class="row fs-5">
                <dt class="col-sm-3 fw-semibold">👤 Customer</dt>
                <dd class="col-sm-9">@Model.Customer?.FullName</dd>

                <dt class="col-sm-3 fw-semibold">🔧 Job Offer</dt>
                <dd class="col-sm-9">@Model.JobOffer?.Title (@Model.JobOffer?.Worker?.FullName)</dd>

                <dt class="col-sm-3 fw-semibold">📅 Booking Date</dt>
                <dd class="col-sm-9">@Model.BookingDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3 fw-semibold">⚙️ Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning me-2">✏️ Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">← Back to List</a>
        </div>
    </div>
</div>
