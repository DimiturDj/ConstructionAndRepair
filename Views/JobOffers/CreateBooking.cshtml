@model RepairAndConstruction.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
    var username = Context.Session.GetString("Username");
}

<h1>Create Booking</h1>

<form asp-action="CreateBooking" method="post">
    <!-- Скрито поле за JobOfferId -->
    <input type="hidden" asp-for="JobOfferId" />

    <!-- Покажи клиента -->
    <div class="form-group">
        <label>Customer</label>
        <input type="text" class="form-control" value="@username" readonly />
    </div>

    

    <!-- Дата на резервация -->
    <div class="form-group">
        <label asp-for="BookingDate" class="control-label">Booking Date</label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <!-- Скрит статус -->
    <input type="hidden" asp-for="Status" value="Pending" />

    <button type="submit" class="btn btn-primary mt-2">Book Now</button>
    <a asp-action="Index" asp-controller="JobOffers" class="btn btn-secondary mt-2">Back to Offers</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
