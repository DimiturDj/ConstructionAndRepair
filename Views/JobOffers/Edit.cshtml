@model RepairAndConstruction.Models.JobOffer

@{
    ViewData["Title"] = "Edit Job Offer";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center rounded-top-4">
            <h2 class="mb-0">✏️ Edit Job Offer</h2>
        </div>
        <div class="card-body px-4 py-4">
            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-semibold"></label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Update job title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-semibold"></label>
                    <textarea asp-for="Description" class="form-control form-control-lg" rows="4" placeholder="Update job description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label fw-semibold"></label>
                    <input asp-for="Price" class="form-control form-control-lg" placeholder="Update price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="WorkerId" class="form-label fw-semibold">Select Worker</label>
                    <select asp-for="WorkerId" class="form-select form-select-lg" asp-items="ViewBag.WorkerId">
                        <option value="">-- Choose Worker --</option>
                    </select>
                    <span asp-validation-for="WorkerId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">← Back</a>
                    <button type="submit" class="btn btn-warning btn-lg">💾 Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
