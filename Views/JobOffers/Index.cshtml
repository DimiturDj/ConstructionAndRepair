@model IEnumerable<RepairAndConstruction.Models.JobOffer>

@{
    ViewData["Title"] = "Job Offers";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">Available Job Offers</h1>
    <div class="d-flex justify-content-between mb-3">
        <a asp-action="Create" class="btn btn-success btn-lg">Create New Offer</a>
    </div>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Price</th>
                <th scope="col">Worker</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var jobOffer in Model)
            {
                <tr>
                    <td>@jobOffer.Title</td>
                    <td>@jobOffer.Description</td>
                    <td>@jobOffer.Price.ToString("C")</td>
                    <td>@jobOffer.Worker.FullName</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@jobOffer.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@jobOffer.Id" class="btn btn-warning btn-sm mx-2">Edit</a>
                        <a asp-action="Delete" asp-route-id="@jobOffer.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


