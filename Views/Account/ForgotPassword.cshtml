@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-body p-4">
                    <h3 class="text-center mb-3 text-primary">Reset Your Password</h3>
                    <p class="text-center text-muted mb-4">Enter your username and we'll help you reset your password.</p>

                    <form asp-action="ForgotPassword" method="post">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input type="text" name="username" id="username" class="form-control" required />
                        </div>

                        <div class="mb-3">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" name="newPassword" id="newPassword" class="form-control" required />
                        </div>

                        <button type="submit" class="btn btn-success w-100">Reset Password</button>

                        <div class="text-center mt-3">
                            <a asp-action="Login" class="text-decoration-none">Back to Login</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
