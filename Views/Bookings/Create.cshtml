@model RepairAndConstruction.Models.Booking

@{
    ViewData["Title"] = "Create Booking";
    var username = Context.Session.GetString("Username"); // Вземаме потребителското име от сесията
}

<h1>Create Booking</h1>

<form asp-action="Create">
    <!-- Автоматично попълване на Customer -->
    <div class="form-group">
        <label>Customer</label>
        <input type="text" class="form-control" value="@username" readonly />
    </div>

    <!-- Избор на Job Offer -->
    <div class="form-group">
        <label asp-for="JobOfferId" class="control-label">Job Offer</label>
        <select asp-for="JobOfferId" class="form-control" asp-items="ViewBag.JobOfferId">
            <option value="">-- Select Job Offer --</option>
        </select>
        <span asp-validation-for="JobOfferId" class="text-danger"></span>
    </div>

    <!-- Избор на Booking Date -->
    <div class="form-group">
        <label asp-for="BookingDate" class="control-label">Booking Date</label>
        <input asp-for="BookingDate" class="form-control" type="date" />
        <span asp-validation-for="BookingDate" class="text-danger"></span>
    </div>

    <!-- Автоматично попълване на Status -->
    <div class="form-group">
        <label>Status</label>
        <input type="text" class="form-control" value="Pending" readonly />
    </div>

    <!-- Бутони за създаване на booking и връщане към списъка -->
    <button type="submit" class="btn btn-primary mt-2">Create</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
