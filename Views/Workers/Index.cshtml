@model IEnumerable<RepairAndConstruction.Models.Worker>

@{
    ViewData["Title"] = "Workers";
    var role = Context.Session.GetString("Role") ?? "Guest";
}

<h1 class="text-center text-primary mb-4">Our Workers</h1>

@if (role == "Admin")
{
    <p>
        <a asp-action="Create" class="btn btn-success mb-3">Create New Worker</a>
    </p>
}

<div class="row">
    @foreach (var worker in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">@worker.FullName</h5>
                    <p class="card-text">@worker.Profession</p>
                    <p class="text-muted">Location: @worker.Location</p>
                    <p class="text-success">Rating: @worker.Rating</p>

                    <a asp-action="Details" asp-route-id="@worker.Id" class="btn btn-info btn-sm">Details</a>

                    @if (role == "Admin")
                    {
                        <a asp-action="Edit" asp-route-id="@worker.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@worker.Id" class="btn btn-danger btn-sm">Delete</a>
                    }
                </div>
            </div>
        </div>
    }
</div>
