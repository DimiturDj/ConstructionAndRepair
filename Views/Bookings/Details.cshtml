@model RepairAndConstruction.Models.Booking

@{
    ViewData["Title"] = "Booking Details";
}

<h1>Booking Details</h1>

<div>
    <h4>Booking</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Customer</dt>
        <dd class="col-sm-9">@Model.Customer?.FullName</dd>

        <dt class="col-sm-3">Job Offer</dt>
        <dd class="col-sm-9">@Model.JobOffer?.Title (@Model.JobOffer?.Worker?.FullName)</dd>

        <dt class="col-sm-3">Booking Date</dt>
        <dd class="col-sm-9">@Model.BookingDate.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
