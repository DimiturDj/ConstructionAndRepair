@model RepairAndConstruction.Models.Review

@{
    ViewData["Title"] = "Edit Review";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-warning text-dark text-center rounded-top-4">
            <h2 class="mb-0">✏️ Edit Review</h2>
        </div>
        <div class="card-body px-4 py-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />

                <!-- Reviewer Name -->
                <div class="mb-3">
                    <label asp-for="ReviewerName" class="form-label fw-semibold">Your Name</label>
                    <input asp-for="ReviewerName" class="form-control form-control-lg" placeholder="Enter your name" />
                    <span asp-validation-for="ReviewerName" class="text-danger"></span>
                </div>

                <!-- Worker Selection -->
                <div class="mb-3">
                    <label asp-for="WorkerId" class="form-label fw-semibold">Select Worker</label>
                    <select asp-for="WorkerId" class="form-control form-control-lg" asp-items="ViewBag.WorkerId">
                        <option value="">-- Select Worker --</option>
                    </select>
                    <span asp-validation-for="WorkerId" class="text-danger"></span>
                </div>

                <!-- Rating -->
                <div class="mb-3">
                    <label asp-for="Rating" class="form-label fw-semibold">Rating (1-5)</label>
                    <input asp-for="Rating" class="form-control form-control-lg" type="number" min="1" max="5" placeholder="Rate from 1 to 5" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <!-- Comment -->
                <div class="mb-3">
                    <label asp-for="Comment" class="form-label fw-semibold">Comment</label>
                    <textarea asp-for="Comment" class="form-control form-control-lg" placeholder="Write your review here"></textarea>
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">← Cancel</a>
                    <button type="submit" class="btn btn-warning btn-lg">💾 Save Changes</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
