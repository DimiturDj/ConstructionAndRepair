@model RepairAndConstruction.Models.Worker

@{
    ViewData["Title"] = "Worker Details";
    var role = Context.Session.GetString("Role") ?? "Guest";
}

<h1>Worker Details</h1>

<div>
    <h4>@Model.FullName</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Profession</dt>
        <dd class="col-sm-10">@Model.Profession</dd>

        <dt class="col-sm-2">Location</dt>
        <dd class="col-sm-10">@Model.Location</dd>

        <dt class="col-sm-2">Rating</dt>
        <dd class="col-sm-10">@Model.Rating</dd>
    </dl>
</div>

<div>
    @if (role == "Admin")
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
    }

    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to homepage</a>
</div>
