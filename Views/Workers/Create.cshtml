@model RepairAndConstruction.Models.Worker

@{
    ViewData["Title"] = "Create Worker";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-success text-white text-center rounded-top-4">
            <h2 class="mb-0">➕ Create New Worker</h2>
        </div>
        <div class="card-body px-4 py-4">
            <form asp-action="Create" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label fw-semibold"></label>
                    <input asp-for="FullName" class="form-control form-control-lg" placeholder="Enter worker's full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Profession" class="form-label fw-semibold"></label>
                    <input asp-for="Profession" class="form-control form-control-lg" placeholder="Enter worker's profession" />
                    <span asp-validation-for="Profession" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Location" class="form-label fw-semibold"></label>
                    <input asp-for="Location" class="form-control form-control-lg" placeholder="Enter worker's location" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Rating" class="form-label fw-semibold"></label>
                    <input asp-for="Rating" class="form-control form-control-lg" placeholder="Enter worker's rating" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg">← Back</a>
                    <button type="submit" class="btn btn-success btn-lg">💾 Create</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
